pipeline {
    agent any

    stages {
        stage('Build') {
            when { changeset "backend/**" }
            steps {
                echo 'build backend...'

                dir('./backend/pick-git') {
                    sh '''
                        ./gradlew -x test clean build
                    '''
                }
            }
        }

        stage('Test') {
            when { changeset "backend/**" }
            steps {
                echo 'test backend...'

                dir('./backend/pick-git') {
                    sh '''
                        ./gradlew test
                    '''
                }
            }
        }

        stage('Deploy') {
            when { changeset "backend/**" }
            steps {
                echo 'deploying backend...'

                dir('./backend/pick-git/script') {
                  sh '''
                    chmod 755 ./deploy_script.sh
                    ./deploy_script.sh -c ~/.ssh/EC2-DEV-PICK-GIT.pem -h 192.168.1.49 -d prod
                  '''
                }
            }
        }
    }
}
