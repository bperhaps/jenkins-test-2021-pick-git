pipeline {
    agent any

    environment {
       INSTANCE_PEM_PATH = credentials('instances-pem-path')
       HOST = credentials('host-dev')
    }

    stages {
        stage('Build') {
            when { changeset "backend/**" }
            steps {
                echo 'build backend...'

                dir('./backend/pick-git') {
                    sh '''
                        ./gradlew -x test clean build
                    '''
                }
            }
        }

        stage('Test') {
            when { changeset "backend/**" }
            steps {
                echo 'test backend...'

                dir('./backend/pick-git') {
                    sh '''
                        ./gradlew test
                    '''
                }
            }
        }

        stage('Deploy') {
            when { changeset "backend/**" }
            steps {
                echo 'deploying backend...'

                dir('./backend/pick-git/script') {
                  sh '''
                    ./deploy_script.sh -c INSTANCE_PEM_PATH -h $HOST -d %PROD
                  '''
                }
            }
        }
    }
}
